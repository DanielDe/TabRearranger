{
    "name": "__MSG_appName__",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "default_locale": "en",
    "background": {
        "scripts": ["scripts/rearrange.js"],
        "persistent": false
    },
    "permissions": ["tabs"],
    "commands": {
        "move-tab-left": {
            "suggested_key": {
                "default": "Shift+Alt+B",
                "windows": "Shift+Alt+B",
                "mac": "MacCtrl+Shift+B"
            },
            "description": "Move active tab left"
        },
        "move-tab-right": {
            "suggested_key": {
                "default": "Shift+Alt+F",
                "windows": "Shift+Alt+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Move active tab right"
        },
        "move-tab-to-next-window": {
            "suggested_key": {
                "default": "Shift+Alt+P",
                "windows": "Shift+Alt+P",
                "mac": "MacCtrl+Shift+P"
            },
            "description": "Move active tab to next window"
        },
        "move-tab-to-new-window": {
            "suggested_key": {
                "default": "Shift+Alt+N",
                "windows": "Shift+Alt+N",
                "mac": "MacCtrl+Shift+N"
            },
            "description": "Move active tab to new window"
        }
    }
}
