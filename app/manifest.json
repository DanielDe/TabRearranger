{
    "name": "__MSG_appName__",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": ["scripts/rearrange.js"],
        "persistent": false
    },
    "permissions": ["tabs"],
    "commands": {
        "move-tab-left": {
            "suggested_key": {
                "default": "Shift+Alt+Left",
                "windows": "Shift+Alt+Left",
                "mac": "MacCtrl+Shift+Left"
            },
            "description": "Move active tab left"
        },
        "move-tab-right": {
            "suggested_key": {
                "default": "Shift+Alt+Right",
                "windows": "Shift+Alt+Right",
                "mac": "MacCtrl+Shift+Right"
            },
            "description": "Move active tab right"
        },
        "move-tab-to-next-window": {
            "suggested_key": {
                "default": "Shift+Alt+Up",
                "windows": "Shift+Alt+Up",
                "mac": "MacCtrl+Shift+Up"
            },
            "description": "Move active tab to next window"
        },
        "move-tab-to-previous-window": {
            "suggested_key": {
                "default": "Shift+Alt+Down",
                "windows": "Shift+Alt+Down",
                "mac": "MacCtrl+Shift+Down"
            },
            "description": "Move active tab to previous window"
        }
    }
}
